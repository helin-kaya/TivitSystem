
@model SendTivitViewModel
@{
    ViewData["Title"] = "SendTivit";
    Layout = "~/Views/Shared/_LayoutTivitSystem.cshtml";
}
@section tivitstyle{
    <style>
        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }

    </style>
}
<h1>SendTivit</h1>
@if (TempData["SendTivitSuccessMsg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>BİLGİ!</strong> @TempData["SendTivitSuccessMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <br />

}
<div class="row">
    <form asp-controller="Home" asp-action="SendTivit" method="post"
          enctype="multipart/form-data">
        <input type="hidden" asp-for="UserId" />
        <div class="col-12">
            <div class="col-9">
                <textarea class="form-control" asp-for="TivitDetail" id="tivitmessage"></textarea>
                <span style="float:right"
                      class="badge bg-secondary" id="tivitmessagebadge"></span>
                      <br />
                <input type="file" asp-for="TivitPictures" multiple accept=".png, .jpg, .jpeg" />
            </div>
            <div class="col-3">
                <br />
                <button type="submit" class="btn btn-info">Gönder</button>
            </div>
        </div>
    </form>

</div>

<div class="tivitdiv">
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            $("#tivitmessage").keyup(function () {
                var characterCount = $("#tivitmessage").val().length;
                var x = characterCount + "/500";
                $("#tivitmessagebadge").text(x);
                // document.getElementById("tivitmessagebadge").innerText = x;
                console.log(x);
            });


        }); // document ready bitti


    </script>
}
